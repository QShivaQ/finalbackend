# Database Configuration (Supabase PostgreSQL)
# ==============================================

# Supabase PostgreSQL Connection (Pooled - for application queries)
# Get from: Supabase Dashboard > Settings > Database > Connection Pooling
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Supabase PostgreSQL Direct Connection (for migrations only)
# Get from: Supabase Dashboard > Settings > Database > Connection String > URI
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Server Configuration
# ====================
PORT=3001
NODE_ENV=development

# CORS - Frontend URLs
# ====================
# Local development
FRONTEND_URL="http://localhost:5173"

# Production (Vercel deployment)
FRONTEND_URL_PRODUCTION="https://your-frontend.vercel.app"

# API Security
# ============
# Generate a random secret: openssl rand -base64 32
API_SECRET_KEY="your-secret-key-change-in-production"

# Supabase API Keys (for server-side operations)
# ==============================================
# Get from: https://app.supabase.com/project/[PROJECT-REF]/settings/api
PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
PUBLIC_SUPABASE_ANON_KEY="sb_publishable_YOUR_KEY_HERE"
SUPABASE_SERVICE_ROLE_KEY="sb_secret_YOUR_KEY_HERE"

# Rate Limiting (optional)
# ========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
